<section id="projects" class="py-8">
  <h2 class="text-xl sm:text-2xl font-medium mb-6 text-my-green">Projects</h2>
  <div class="border-t border-white/20">
    {projects.map((project) => (
      <a
        href={project.url}
        target="_blank"
        rel="noopener noreferrer"
        class="group flex items-center justify-between py-4 border-b border-white/20"
      >
        <div>
          <h3 class="text-lg font-medium group-hover:text-my-green transition-colors">
            {project.title}
          </h3>
          <p class="text-base text-white/50 mt-1">
            {project.description}
          </p>
        </div>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="text-white/30 group-hover:text-my-green transition-colors shrink-0 ml-4"
        >
          <path d="M7 7h10v10"></path>
          <path d="M7 17 17 7"></path>
