---
import { Image } from 'astro:assets';
import profileImg from '../images/ivo-mountains.webp';
---
<section class="pb-8">
  <hr class="border-white/20 mb-8" />
  <div class="flex flex-col sm:flex-row sm:items-center gap-6">
    <div class="w-32 h-32 rounded-full overflow-hidden shrink-0">
      <Image
        src={profileImg}
        alt="Ivo Å½aloudek"
        width={128}
        height={128}
        class="w-full h-full object-cover"
        loading={'eager'}
      />
    </div>
    <div>
      <h1 class="text-2xl sm:text-3xl font-semibold mb-3">
        Hi, I'm @zalivo.
      </h1>
      <p class="text-lg text-white/70 leading-relaxed mb-4">
        Designer and developer
      </p>
      <div class="flex gap-4">
        <a
          href="https://github.com/zalivo?tab=repositories"
          target="_blank"
          rel="noopener noreferrer"
          class="text-white/50 hover:text-my-green transition-colors"
          aria-label="GitHub"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
            <path d="M9 18c-4.51 2-5-2-7-2"></path>
          </svg>
        </a>
        <a
          href="https://www.linkedin.com/in/ivo-%C5%BEaloudek-18a394216/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-white/50 hover:text-my-green transition-colors"
          aria-label="LinkedIn"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
            <rect width="4" height="12" x="2" y="9"></rect>
            <circle cx="4" cy="4" r="2"></circle>
          </svg>
        </a>
        <a
          href="mailto:izaloudek5@gmail.com"
          class="text-white/50 hover:text-my-green transition-colors"
          aria-label="Email"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect width="20" height="16" x="2" y="4" rx="2"></rect>
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
  <hr class="border-white/20 mt-8" />
</section>
