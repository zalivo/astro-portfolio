---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import profileImg from '../images/ivo-mountains.webp';
---
<section class="pb-8">
  <hr class="border-white/20 mb-8" />
  <div class="flex flex-col sm:flex-row sm:items-center gap-6">
    <div class="w-32 h-32 rounded-full overflow-hidden shrink-0">
      <Image
        src={profileImg}
        alt="Ivo Å½aloudek"
        width={128}
        height={128}
        class="w-full h-full object-cover"
        loading={'eager'}
      />
    </div>
    <div class="flex flex-col gap-2">
      <h1 class="text-2xl sm:text-3xl font-semibold">
        Hi, I'm @zalivo.
      </h1>
      <p class="text-lg text-white leading-relaxed">
        Designer and developer.
      </p>
      <p class="text-lg text-white leading-relaxed">
        Based in Prague.
      </p>
      <div class="flex gap-4">
        <a
          href="https://github.com/zalivo?tab=repositories"
          target="_blank"
          rel="noopener noreferrer"
          class="text-white hover:text-my-green transition-colors"
          aria-label="GitHub"
        >
          <Icon name="lucide:github" size={24} />
        </a>
        <a
          href="https://www.linkedin.com/in/ivo-%C5%BEaloudek-18a394216/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-white hover:text-my-green transition-colors"
          aria-label="LinkedIn"
        >
          <Icon name="lucide:linkedin" size={24} />
        </a>
        <a
          href="mailto:izaloudek5@gmail.com"
          class="text-white hover:text-my-green transition-colors"
          aria-label="Email"
        >
          <Icon name="lucide:mail" size={24} />
        </a>
      </div>
    </div>
  </div>
  <hr class="border-white/20 mt-8" />
</section>
