---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---
<Layout title="Blog — Ivo Žaloudek">
  <main class="container py-12 md:py-16">
    <Navbar />
    <section class="py-8">
      <h2 class="text-xl sm:text-2xl font-medium mb-6 text-my-green">Blog</h2>
      <div class="border-t border-white/20">
        {posts.map((post) => (
          <a
            href={`${import.meta.env.BASE_URL}/blog/${post.id}`}
            class="group flex items-center justify-between py-4 border-b border-white/20"
          >
            <div>
              <h3 class="text-lg font-medium group-hover:text-my-green transition-colors">
                {post.data.title}
              </h3>
              <p class="text-white/70 text-sm mt-1">
                {post.data.pubDate.toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "long",
                  day: "numeric",
                })}
              </p>
              <p class="text-base text-white mt-1">
                {post.data.description}
              </p>
            </div>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-white group-hover:text-my-green transition-colors shrink-0 ml-4"
            >
              <path d="M7 7h10v10"></path>
              <path d="M7 17 17 7"></path>
            </svg>
          </a>
        ))}
      </div>
    </section>
    <Footer />
  </main>
</Layout>
